rm -r ../macosx/arcadia.app/Contents/Resources
echo "Old Resources removed"
mkdir ../macosx/arcadia.app/Contents/Resources
echo "New Resources created"
cp ../res/* ../macosx/arcadia.app/Contents/Resources/
echo "New Resources copied"